@model BooksManager.Application.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Delete Booking";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Delete">
    <vc:summary />

    <h3>Are you sure you want to delete the Booking @Model.Id?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.BookingPeriod.Start)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.BookingPeriod.Start)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.BookingPeriod.End)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.BookingPeriod.End)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>


        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
