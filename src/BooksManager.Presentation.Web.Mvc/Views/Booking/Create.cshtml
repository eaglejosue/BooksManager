@model BooksManager.Application.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Register new Booking";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />

        @* Replacing classic Validation Summary to Custom ViewComponent as TagHelper *@
        <vc:summary />

        <div class="form-group">
            <label asp-for="BookingPeriod.Start" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BookingPeriod.Start" class="form-control" />
                <span asp-validation-for="BookingPeriod.Start" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="BookingPeriod.End" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BookingPeriod.End" class="form-control" />
                <span asp-validation-for="BookingPeriod.End" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        // TODO: melhorar

        <div class="form-group">
            <label asp-for="Book" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Book" class="form-control" />
                <span asp-validation-for="Book" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
